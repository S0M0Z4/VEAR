        // Funciones de formulario
        function handleLogin(e) {
            e.preventDefault();
            
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const errorElement = document.getElementById('login-error');
            
            // Autenticación simple
            if (username === 'admin' && password === 'admin123') {
                isAuthenticated = true;
                showToast('Sesión iniciada correctamente', 'success');
                showView('admin');
            } else {
                errorElement.textContent = 'Usuario o contraseña incorrectos';
                errorElement.classList.remove('hidden');
            }
        }

        function handleSubmitRequest(e) {
            e.preventDefault();
            
            const formData = {
                id: Date.now().toString(),
                name: document.getElementById('name').value,
                phone: document.getElementById('phone').value,
                email: document.getElementById('email').value,
                operationType: document.querySelector('input[name="operationType"]:checked').value,
                needsAccounting: document.querySelector('input[name="needsAccounting"]:checked').value === 'si',
                message: document.getElementById('message').value,
                date: new Date().toISOString(),
                status: 'nueva'
            };
            
            requests.push(formData);
            saveRequests();
            
            // Reset form
            elements.requestForm.reset();
            elements.requestFormModal.classList.add('hidden');
            
            // Mostrar mensaje de éxito
            showToast('¡Solicitud enviada exitosamente! Nos pondremos en contacto contigo pronto.', 'success');
            
            // Actualizar estadísticas admin si estamos en esa vista
            if (currentView === 'admin') {
                updateAdminStats();
                renderAdminRequests();
            }
        }

        // Funciones de administración
        function updateAdminStats() {
            const comprarRequests = requests.filter(r => r.operationType === 'comprar');
            const venderRequests = requests.filter(r => r.operationType === 'vender');
            const rentarRequests = requests.filter(r => r.operationType === 'rentar');
            const accountingRequests = requests.filter(r => r.needsAccounting);
            
            elements.totalRequests.textContent = requests.length;
            elements.comprarCount.textContent = comprarRequests.length;
            elements.venderCount.textContent = venderRequests.length;
            elements.rentarCount.textContent = rentarRequests.length;
            
            // Actualizar contadores de tabs
            elements.tabCounts.todas.textContent = requests.length;
            elements.tabCounts.comprar.textContent = comprarRequests.length;
            elements.tabCounts.vender.textContent = venderRequests.length;
            elements.tabCounts.rentar.textContent = rentarRequests.length;
            elements.tabCounts.asesoria.textContent = accountingRequests.length;
        }

        function renderAdminRequests() {
            const comprarRequests = requests.filter(r => r.operationType === 'comprar');
            const venderRequests = requests.filter(r => r.operationType === 'vender');
            const rentarRequests = requests.filter(r => r.operationType === 'rentar');
            const accountingRequests = requests.filter(r => r.needsAccounting);
            
            // Función para renderizar una tarjeta de solicitud
            const renderRequestCard = (request) => {
                const statusMap = {
                    'nueva': { label: 'Nueva', className: 'bg-blue-100 text-blue-800' },
                    'en-proceso': { label: 'En Proceso', className: 'bg-yellow-100 text-yellow-800' },
                    'completada': { label: 'Completada', className: 'bg-green-100 text-green-800' }
                };
                
                const statusInfo = statusMap[request.status] || statusMap['nueva'];
                const formattedDate = formatDate(request.date);
                
                return `
                    <div class="card hover:shadow-md transition-shadow cursor-pointer" data-id="${request.id}">
                        <div class="card-content p-4">
                            <div class="flex items-start justify-between mb-3">
                                <div>
                                    <h4 class="text-neutral-900 mb-1">${request.name}</h4>
                                    <p class="text-sm text-neutral-600">${request.email}</p>
                                    <p class="text-sm text-neutral-600">${request.phone}</p>
                                </div>
                                <div class="text-right">
                                    <span class="badge ${statusInfo.className}">${statusInfo.label}</span>
                                </div>
                            </div>
                            <div class="flex items-center gap-4 text-sm">
                                <span class="text-neutral-500">${formattedDate}</span>
                                ${request.needsAccounting ? `
                                    <span class="badge badge-outline text-neutral-700 border-neutral-300">
                                        <i class="fas fa-check-circle mr-1"></i>
                                        Asesoría Contable
                                    </span>
                                ` : ''}
                            </div>
                            ${request.message ? `
                                <p class="text-sm text-neutral-600 mt-3 line-clamp-2">${request.message}</p>
                            ` : ''}
                        </div>
                    </div>
                `;
            };
            
            // Renderizar todas las solicitudes
            elements.tabsContent.todas.innerHTML = requests.length === 0 ? `
                <div class="card">
                    <div class="card-content p-12 text-center">
                        <i class="fas fa-file-alt text-3xl text-neutral-400 mx-auto mb-4"></i>
                        <p class="text-neutral-600">No hay solicitudes registradas</p>
                    </div>
                </div>
            ` : requests.map(renderRequestCard).join('');
            
            // Renderizar solicitudes de compra
            elements.tabsContent.comprar.innerHTML = comprarRequests.length === 0 ? `
                <div class="card">
                    <div class="card-content p-12 text-center">
                        <i class="fas fa-shopping-cart text-3xl text-neutral-400 mx-auto mb-4"></i>
                        <p class="text-neutral-600">No hay solicitudes de compra</p>
                    </div>
                </div>
            ` : comprarRequests.map(renderRequestCard).join('');
            
            // Renderizar solicitudes de venta
            elements.tabsContent.vender.innerHTML = venderRequests.length === 0 ? `
                <div class="card">
                    <div class="card-content p-12 text-center">
                        <i class="fas fa-chart-line text-3xl text-neutral-400 mx-auto mb-4"></i>
                        <p class="text-neutral-600">No hay solicitudes de venta</p>
                    </div>
                </div>
            ` : venderRequests.map(renderRequestCard).join('');
            
            // Renderizar solicitudes de renta
            elements.tabsContent.rentar.innerHTML = rentarRequests.length === 0 ? `
                <div class="card">
                    <div class="card-content p-12 text-center">
                        <i class="fas fa-home text-3xl text-neutral-400 mx-auto mb-4"></i>
                        <p class="text-neutral-600">No hay solicitudes de renta</p>
                    </div>
                </div>
            ` : rentarRequests.map(renderRequestCard).join('');
            
            // Renderizar solicitudes con asesoría
            elements.tabsContent.asesoria.innerHTML = accountingRequests.length === 0 ? `
                <div class="card">
                    <div class="card-content p-12 text-center">
                        <i class="fas fa-check-circle text-3xl text-neutral-400 mx-auto mb-4"></i>
                        <p class="text-neutral-600">No hay solicitudes con asesoría contable</p>
                    </div>
                </div>
            ` : accountingRequests.map(renderRequestCard).join('');
            
            // Agregar event listeners a las tarjetas
            document.querySelectorAll('.card[data-id]').forEach(card => {
                card.addEventListener('click', () => {
                    const requestId = card.getAttribute('data-id');
                    selectedRequest = requests.find(r => r.id === requestId);
                    showView('detail');
                });
            });
        }

        function switchTab(tab) {
            // Actualizar botones activos
            document.querySelectorAll('.tabs-trigger').forEach(trigger => {
                if (trigger.getAttribute('data-tab') === tab) {
                    trigger.classList.add('active');
                } else {
                    trigger.classList.remove('active');
                }
            });
            
            // Mostrar contenido de la tab seleccionada
            Object.keys(elements.tabsContent).forEach(key => {
                if (key === tab) {
                    elements.tabsContent[key].classList.remove('hidden');
                } else {
                    elements.tabsContent[key].classList.add('hidden');
                }
            });
        }

        // Funciones de detalle de solicitud
        function renderRequestDetail() {
            if (!selectedRequest) return;
            
            const operationLabels = {
                'comprar': 'Comprar',
                'vender': 'Vender',
                'rentar': 'Rentar'
            };
            
            const operationColors = {
                'comprar': 'bg-blue-100 text-blue-800',
                'vender': 'bg-green-100 text-green-800',
                'rentar': 'bg-purple-100 text-purple-800'
            };
            
            const statusLabels = {
                'nueva': 'Nueva',
                'en-proceso': 'En Proceso',
                'completada': 'Completada'
            };
            
            // Actualizar información
            elements.detailName.textContent = selectedRequest.name;
            elements.detailEmail.textContent = selectedRequest.email;
            elements.detailPhone.textContent = selectedRequest.phone;
            elements.detailDate.textContent = formatDate(selectedRequest.date);
            
            // Actualizar badges
            elements.detailOperationBadge.className = `badge ${operationColors[selectedRequest.operationType]}`;
            elements.detailOperationBadge.textContent = operationLabels[selectedRequest.operationType];
            
            elements.detailOperationType.className = `badge ${operationColors[selectedRequest.operationType]}`;
            elements.detailOperationType.textContent = operationLabels[selectedRequest.operationType];
            
            // Actualizar asesoría contable
            if (selectedRequest.needsAccounting) {
                elements.detailAccounting.innerHTML = `
                    <i class="fas fa-check-circle text-green-600"></i>
                    <span class="text-green-700">Sí requiere</span>
                `;
            } else {
                elements.detailAccounting.innerHTML = `
                    <i class="fas fa-times-circle text-neutral-400"></i>
                    <span class="text-neutral-600">No requiere</span>
                `;
            }
            
            // Actualizar estado
            elements.detailStatus.textContent = statusLabels[selectedRequest.status] || 'Nueva';
            
            // Actualizar mensaje
            if (selectedRequest.message) {
                elements.detailMessage.textContent = selectedRequest.message;
                elements.detailMessageSection.classList.remove('hidden');
            } else {
                elements.detailMessageSection.classList.add('hidden');
            }
        }

        function handleMarkAsProcess() {
            if (!selectedRequest) return;
            
            selectedRequest.status = 'en-proceso';
            saveRequests();
            
            showToast('Solicitud marcada como en proceso', 'success');
            renderRequestDetail();
            
            // Actualizar vista admin
            updateAdminStats();
            renderAdminRequests();
        }

        function handleContactClient() {
            if (!selectedRequest) return;
            
            showToast(`Se ha iniciado el contacto con ${selectedRequest.name}`, 'info');
        }

        // Funciones auxiliares
        function handleLogout() {
            isAuthenticated = false;
            showToast('Sesión cerrada', 'info');
            showView('public');
        }

        function handleBackToAdmin() {
            selectedRequest = null;
            showView('admin');
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('es-MX', { 
                day: '2-digit', 
                month: 'long', 
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        function saveRequests() {
            localStorage.setItem('realEstateRequests', JSON.stringify(requests));
        }

        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.textContent = message;
            
            elements.toastContainer.appendChild(toast);
            
            // Eliminar toast después de 5 segundos
            setTimeout(() => {
                toast.remove();
            }, 5000);
        }
    </script>
</body>
</html>
