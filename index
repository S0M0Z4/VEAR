                                    <button data-filter="vender" class="btn ${currentFilter === 'vender' ? 'btn-default' : 'btn-outline'}">
                                        Vender
                                    </button>
                                    <button data-filter="rentar" class="btn ${currentFilter === 'rentar' ? 'btn-default' : 'btn-outline'}">
