        function initApp() {
            // Cargar solicitudes del localStorage o usar las de ejemplo
            const savedRequests = localStorage.getItem('realEstateRequests');
            if (savedRequests) {
                requests = JSON.parse(savedRequests);
            } else {
                requests = [...mockRequests];
                saveRequests();
            }
            
            // Renderizar vista pública inicial
            renderPublicHome();
            
            // Mostrar botón de acceso admin en vista pública
            elements.adminAccessBtn.classList.remove('hidden');
            
            // Actualizar estadísticas admin
            updateAdminStats();
            renderAdminRequests();
        }

        function setupEventListeners() {
            // Navegación
            elements.adminAccessBtn.addEventListener('click', () => {
                showView('login');
            });
            
            elements.logoutBtn.addEventListener('click', handleLogout);
            elements.backToAdminBtn.addEventListener('click', handleBackToAdmin);
            
            // Formularios
            elements.loginForm.addEventListener('submit', handleLogin);
            elements.requestForm.addEventListener('submit', handleSubmitRequest);
            
            // Modal
            elements.closeFormBtn.addEventListener('click', () => {
                elements.requestFormModal.classList.add('hidden');
            });
            
            elements.cancelFormBtn.addEventListener('click', () => {
                elements.requestFormModal.classList.add('hidden');
            });
            
            // Tabs admin
            document.querySelectorAll('.tabs-trigger').forEach(trigger => {
                trigger.addEventListener('click', () => {
                    const tab = trigger.getAttribute('data-tab');
                    switchTab(tab);
                });
            });
            
            // Botones de detalle
            elements.markProcessBtn.addEventListener('click', handleMarkAsProcess);
            elements.contactClientBtn.addEventListener('click', handleContactClient);
        }

        // Funciones de vista
        function showView(view) {
            // Ocultar todas las vistas
            elements.publicView.classList.add('hidden');
            elements.loginView.classList.add('hidden');
            elements.adminView.classList.add('hidden');
            elements.detailView.classList.add('hidden');
            elements.requestFormModal.classList.add('hidden');
            elements.adminAccessBtn.classList.add('hidden');
            
            // Mostrar vista solicitada
            currentView = view;
            
            switch(view) {
                case 'public':
                    elements.publicView.classList.remove('hidden');
                    elements.adminAccessBtn.classList.remove('hidden');
                    break;
                case 'login':
                    elements.loginView.classList.remove('hidden');
                    break;
                case 'admin':
                    elements.adminView.classList.remove('hidden');
                    updateAdminStats();
                    renderAdminRequests();
                    break;
                case 'detail':
                    elements.detailView.classList.remove('hidden');
                    renderRequestDetail();
                    break;
            }
        }

        // Funciones de la vista pública
        function renderPublicHome() {
            const filteredProperties = currentFilter === 'todos' 
                ? mockProperties 
                : mockProperties.filter(p => p.type === currentFilter);
            
            elements.publicHome.innerHTML = `
                <div class="min-h-screen bg-neutral-50">
                    <!-- Header -->
                    <header class="bg-white border-b border-neutral-200">
                        <div class="container py-6">
